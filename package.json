{
  "name": "bs-eth",
  "description": "Web3 like library for ReasonML/Bucklescript",
  "version": "0.2.0",
  "scripts": {
    "clean": "bsb -clean-world",
    "build": "bsb -make-world",
    "watch": "bsb -make-world -w",
    "refmt": "bsrefmt --in-place **/*.re",
    "test": "yarn jest"
  },
  "keywords": [
    "BuckleScript",
    "ReasonML",
    "Ethereum",
    "Web3"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/pelle/bs-eth.git"
  },
  "homepage": "https://github.com/pelle/bs-eth",
  "author": "Pelle Braendgaard <pelleb@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@glennsl/bs-jest": "^0.4.8",
    "bs-platform": "^5.0.4",
    "ganache-cli": "^6.4.3",
    "husky": "^2.1.0",
    "lint-staged": "^8.1.5"
  },
  "dependencies": {
    "@aantron/repromise": "^0.6.0",
    "@glennsl/bs-json": "^3.0.0",
    "bn.js": "^4.11.8",
    "bs-bn.js": "^0.0.2",
    "bs-fetch": "^0.3.0",
    "isomorphic-fetch": "^2.2.1"
  },
  "lint-staged": {
    "*.re": [
      "bsrefmt --in-place",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "files": [
    "src/",
    "README.md",
    "LICENSE",
    "__tests__/",
    "bsconfig.json"
  ]
}